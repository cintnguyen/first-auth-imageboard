<!doctype html>
<html>

<head>
  <title>Image Board</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1></span> Image Board</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <h3>Welcome <%= user.local.email %>
    </h3>
    <section class="testing">
      <% for(var i=0; i<messages.length; i++) {%>
        <section class="oneImage">
          <img src="img/<%= messages[i].image %>">
          <section>
            <span><%= messages[i].likeAmount %></span>
            <span><i data-likeAmount="<%= messages[i].likeAmount %>" data-image="<%= messages[i]._id %>" class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i data-likeAmount="<%= messages[i].likeAmount %>" data-image="<%= messages[i]._id %>" class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i data-image="<%= messages[i]._id %>" class="fa fa-trash" aria-hidden="true"></i></span>
          </section>
        </section>
      <% } %>
    </section>

    <div class="row">

      <!-- LOCAL INFORMATION -->

      <div class="col-sm-6">
  
        <h2>Upload your image file below</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="file" placeholder="image" name="image">
            <button type="submit">Post</button>
          </form>
      </div>
      <% } %>

    </div>

    <script src="main.js"></script>

</body>

</html>